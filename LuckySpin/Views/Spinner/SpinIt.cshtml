@model LuckySpin.Models.Spin
@inject LuckySpin.Models.TextTransformService Transform

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Lucky Spin</title>
</head>
<body>
    <button onclick='history.go(0)'>Spin</button>
    <div>@Model.A</div><div>@Model.B</div><div>@Model.C</div>
    <h2 style="display:@Model.Display">Congrats @ViewBag.name, you win with a lucky @Transform.numberToText(Model.Luck)</h2>
    <img src="/Images/LuckySpinCoins.jpg" class="animated bounce" alt="Coins" style="display:@Model.Display" />
</body>
</html>